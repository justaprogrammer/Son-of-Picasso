<reactiveUi:ReactiveUserControl x:TypeArguments="viewModels:ImageViewModel" x:Class="SonOfPicasso.UI.Views.ImageViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:reactiveUi="http://reactiveui.net"
             xmlns:viewModels="clr-namespace:SonOfPicasso.UI.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Vertical">
        <Label Name="ImageLabel" />
        <Image Name="ImageBitmap" Height="250" Width="250" Stretch="Fill" />
    </StackPanel>
</reactiveUi:ReactiveUserControl>
