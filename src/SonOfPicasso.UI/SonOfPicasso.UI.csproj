    <PackageReference Include="Splat.Autofac" Version="9.0.5" />
    <PackageReference Include="Splat.Drawing" Version="9.0.5" />
    <PackageReference Include="Splat.Serilog" Version="9.0.5" />
    <PackageReference Include="System.IO.Abstractions" Version="6.0.38" />
    <PackageReference Include="System.Reactive" Version="4.2.0-preview.625" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\SonOfPicasso.Core\SonOfPicasso.Core.csproj" />
    <ProjectReference Include="..\SonOfPicasso.Data\SonOfPicasso.Data.csproj" />
  </ItemGroup>

</Project>