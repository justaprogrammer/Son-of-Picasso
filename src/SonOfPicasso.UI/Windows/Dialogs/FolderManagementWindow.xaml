<reactiveUi:ReactiveWindow x:TypeArguments="viewModels:ManageFolderRulesViewModel"
                           x:Class="SonOfPicasso.UI.Windows.Dialogs.FolderManagementWindow"
                           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                           xmlns:reactiveUi="http://reactiveui.net"
                           xmlns:viewModels="clr-namespace:SonOfPicasso.UI.ViewModels"
                           xmlns:services="clr-namespace:SonOfPicasso.Core.Services;assembly=SonOfPicasso.Core"
                           xmlns:model="clr-namespace:SonOfPicasso.Data.Model;assembly=SonOfPicasso.Data"
                           mc:Ignorable="d"
                           Title="Manage Folders"
                           Name="Window"
                           Height="750" Width="500">
    <Window.Resources>
        <ResourceDictionary>
            <Style x:Key="FolderImageStyle" TargetType="Image">
                <Setter Property="Source" Value="{Binding ElementName=Window, Path=ImageProvider.Folder}"></Setter>
                <Style.Triggers>
                    <DataTrigger
                        Binding="{Binding RelativeSource={RelativeSource AncestorType=TreeViewItem}, Path=IsExpanded}"
                        Value="True">
                        <DataTrigger.Setters>
                            <Setter Property="Source" Value="{Binding ElementName=Window, Path=ImageProvider.OpenedFolder}"></Setter>
                        </DataTrigger.Setters>
                    </DataTrigger>
                </Style.Triggers>
            </Style>

            <Style x:Key="OnceImageStyle" TargetType="Image">
                <Setter Property="Visibility" Value="Collapsed"></Setter>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding Path=FolderRuleAction}" Value="{x:Static model:FolderRuleActionEnum.Once}">
                        <Setter Property="Visibility" Value="Visible" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>

            <Style x:Key="RemoveImageStyle"  TargetType="Image">
                <Setter Property="Visibility" Value="Collapsed"></Setter>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding Path=FolderRuleAction}" Value="{x:Static model:FolderRuleActionEnum.Remove}">
                        <Setter Property="Visibility" Value="Visible" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>

            <Style x:Key="AlwaysImageStyle" TargetType="Image">
                <Setter Property="Visibility" Value="Collapsed"></Setter>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding Path=FolderRuleAction}" Value="{x:Static model:FolderRuleActionEnum.Always}">
                        <Setter Property="Visibility" Value="Visible" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </Window.Resources>
    <DockPanel LastChildFill="True">
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right"
                    VerticalAlignment="Bottom">
            <Button Name="OkButton" Content="Ok" />
            <Button Name="CancelButton" Content="Cancel" />
        </StackPanel>

        <DockPanel DockPanel.Dock="Top">
            <StackPanel DockPanel.Dock="Bottom">
                <CheckBox Content="Display Selected Items" Name="DisplaySelectedItemsCheckbox" />
            </StackPanel>
            <Grid DockPanel.Dock="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TreeView Name="FoldersListView"
                          SelectedItemChanged="FoldersListView_OnSelectedItemChanged"
                          Grid.Row="0" Grid.Column="0">
                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate DataType="{x:Type viewModels:FolderRuleInputViewModel}"
                                                  ItemsSource="{Binding Path=Children}">
                            <StackPanel Orientation="Horizontal">
                                <Image Height="16" Width="16"
                                       Style="{StaticResource FolderImageStyle}"/>

                                <Image Height="16" Width="16"
                                       Name="CheckmarkImage"
                                       Source="{Binding ElementName=Window, Path=ImageProvider.Checkmark}"
                                       Style="{StaticResource OnceImageStyle}" />

                                <Image Height="16" Width="16"
                                       Name="CancelImage"
                                       Source="{Binding ElementName=Window, Path=ImageProvider.Cancel}"
                                       Style="{StaticResource RemoveImageStyle}" />

                                <Image Height="16" Width="16"
                                       Name="SynchronizeImage"
                                       Source="{Binding ElementName=Window, Path=ImageProvider.Synchronize}"
                                       Style="{StaticResource AlwaysImageStyle}" />

                                <Label Name="NameLabel" Content="{Binding Name}" />
                            </StackPanel>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                    <TreeView.ItemContainerStyle>
                        <Style TargetType="TreeViewItem">
                            <Setter Property="IsExpanded" Value="{Binding Path=ShouldShow}" />
                            <EventSetter Event="Expanded" Handler="TreeViewItem_OnExpanded" />
                        </Style>
                    </TreeView.ItemContainerStyle>
                </TreeView>

                <GridSplitter Grid.Row="0" Grid.Column="1"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Stretch"
                              ShowsPreview="True"
                              Width="5" />

                <StackPanel Grid.Row="0" Grid.Column="2" VerticalAlignment="Center">
                    <StackPanel>
                        <Label>For the current folder:</Label>
                        <RadioButton Name="SelectedItemNeverRadioButton" Click="SelectedItemNeverRadioButton_OnClick">Never</RadioButton>
                        <RadioButton Name="SelectedItemOnceRadioButton" Click="SelectedItemOnceRadioButton_OnClick">Once</RadioButton>
                        <RadioButton Name="SelectedItemAlwaysRadioButton" Click="SelectedItemAlwaysRadioButton_OnClick">Always</RadioButton>
                    </StackPanel>

                    <StackPanel>
                        <Label>Watched Folders:</Label>
                        <ListView Name="WatchedPathsList" />
                    </StackPanel>
                </StackPanel>
            </Grid>

        </DockPanel>
    </DockPanel>
</reactiveUi:ReactiveWindow>